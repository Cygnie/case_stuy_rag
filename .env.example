# NTT DATA RAG API - Environment Configuration
# Copy this file to .env and fill in your values

# API Keys (Required)
LLM_API_KEY=your-google-api-key-here
EMBEDDING_API_KEY=your-google-api-key-here

# Qdrant Settings
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=your-collection-name-here

# Model Settings
LLM_PROVIDER=gemini  # Options: gemini, openai, anthropic
LLM_MODEL=gemini-2.5-flash
EMBEDDING_MODEL=models/embedding-001
LLM_TEMPERATURE=0.7

# RAG Settings
RAG_K=5

# System Settings
LOG_LEVEL=INFO
APP_HOST=127.0.0.1
APP_PORT=8000

# LangSmith Tracing (Optional)
# LANGSMITH_TRACING=true
# LANGSMITH_API_KEY=your-langsmith-key
# LANGSMITH_PROJECT=ntt_workflow
